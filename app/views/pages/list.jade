extends ../layout
block content
	.container
		.row
			table.table.table-hover.table-bordered
				thead
					tr
						th 电影名字
						th 所属分类
						th 导演
						th 国家
						th 上映年份
						th 录入时间
						th 访问量
						th 查看
						th 更新
						th 删除
				tbody 

					each item in movies
						tr(id="item-id-#{item._id}")
							td #{item.title}
								if item.category
									td #{item.category.name}
								else 
									td --
							td #{item.director}
							td #{item.country}
							td #{item.year}
							td #{moment(item.meta.updateAt).format('YYYY-MM-DD HH:MM:SS')}
							td #{item.pv}
							td: a(target="_blank", href="/movie/#{item._id}") 查看
							td: a(target="_blank", href="/admin/update/#{item.id}") 修改
							td
								button.btn.btn-danger.mini.del(type="button",data-id="#{item.id}") 删除
	script(src="/js/admin.js")