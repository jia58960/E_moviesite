extends ../layout
block content
	.container
		.row
			each cat in categories
				.panel.panel-default
					.panel-heading
						h5
							a(href='/results?cat=#{cat._id}&p=0') #{cat.name}
					.panel-body
						if cat.movies && cat.movies.length
							each item in cat.movies
								.col-md-2
									.thumbnail
										a(href="/movie/#{item.id}")
											if item.poster.indexOf('http') > -1
												img(src="#{item.poster}", alt="#{item.title}", width='120')
											else
												img(src="/upload/#{item.poster}", alt="#{item.title}", width='120')
										.caption(style="text-align:center")
											h5 #{item.title}
											p: a.btn.btn-primary(href="/movie/#{item._id}", role="button") 查看详情
						else
							p(style="text-align:center") 暂无数据！
							