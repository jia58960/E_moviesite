extends ../layout

block content
  .container
    .row
      .col-md-3
        if movie.poster.indexOf('http') > -1
          img(src="#{movie.poster}")
        else
          img(src="/upload/#{movie.poster}")
      .col-md-9
        .dl-horizontal
          dt 电影名字
          dd= movie.title
          dt 导演
          dd= movie.director
          dt 国家
          dd= movie.country
          dt 语言
          dd= movie.language
          dt 上映年份
          dd= movie.year
          dt 简介
          dd= movie.summary
          dt 预览预告片
          dd 
            if movie.flash
             | 先打开
             a(href="https://movie.douban.com" target="_blank")豆瓣电影, 
             | 然后复制 
             b #{movie.flash} 
             |粘贴至浏览器地址栏就能看预告片了。
            else 
             | 暂无预告片

    hr
    .row
      .col-md-12
        .panel.panel-default
          .panel-heading
            h4 评论区
          .panel-body
            ul.media-list
              each item in comments
                li.media
                  .pull-left
                    a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{item.from._id}")
                      if item.from.avatar.indexOf('default') > -1
                        img.media-object(src="#{item.from.avatar}", width="64", height="64")
                      else
                        img.media-object(src="/avatar/#{item.from.avatar}", width="64", height="64")
                  .media-body
                    h4.media-heading #{item.from.name}
                    p #{item.content}
                    if item.reply && item.reply.length > 0
                      each reply in item.reply
                        .media
                          .pull-left
                            a.comment(href="#comments", data-cid="#{item._id}", data-tid="#{reply.from._id}")
                              if reply.from.avatar.indexOf('default') > -1
                                img.media-object(src="#{reply.from.avatar}", width="64", height="64")
                              else
                                img.media-object(src="/avatar/#{reply.from.avatar}", width="64", height="64")
                          .media-body
                            h4.media-heading
                              | #{reply.from.name}
                              span.text-info &nbsp;回复&nbsp;
                              | #{reply.to.name}:
                            p #{reply.content}
                  hr
            #comments
              form#commentForm(method="POST", action="/user/comment")
                input(type="hidden", name="comment[movie]", value="#{movie._id}")
                if user
                  input(type="hidden", name="comment[from]", value="#{user._id}")
                .form-group
                  textarea.form-control(name="comment[content]", row="3")
                if user
                  button.btn.btn-primary(type='submit') 提交
                else
                  a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录后评论
  script(src="/js/detail.js")